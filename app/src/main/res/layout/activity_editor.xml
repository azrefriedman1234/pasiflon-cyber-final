<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505">

    <FrameLayout
        android:id="@+id/media_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/controls_layout">
        
        <ImageView
            android:id="@+id/editor_image_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

        <com.pasiflon.mobile.BlurOverlayView
            android:id="@+id/blur_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />
            
        <ImageView
            android:id="@+id/watermark_overlay"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:alpha="0.8" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/controls_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#1A1A1A">
        
        <Button
            android:id="@+id/btn_add_blur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="הפעל מצב טשטוש"
            android:backgroundTint="#FF00E5" />
            
        <Button
            android:id="@+id/btn_export"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ייצא ושלח"
            android:backgroundTint="#00F2FF"
            android:textColor="#050505"
            android:layout_marginStart="10dp" />
    </LinearLayout>
</RelativeLayout>
